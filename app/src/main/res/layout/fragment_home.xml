<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/text1"
        android:layout_width="221dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Welcome back : "
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/username"
        android:layout_width="187dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="username"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text2"
            android:layout_width="418dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Want to capture a bird you like?"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
            android:text="Click on the button"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp">

            <Button
                android:id="@+id/mylibrary"
                android:layout_width="107dp"
                android:layout_height="37dp"
                android:layout_marginLeft="25dp"
                android:text="My Library" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/imagecount"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:layout_marginLeft="25dp"
        android:text="xx" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="128dp"
        android:layout_height="19dp"
        android:gravity="right"
        android:text="Images Uploaded" />

</LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/videocount"
                    android:layout_width="27dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="25dp"
                    android:text="xx"
                    />
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="128dp"
                    android:layout_height="19dp"
                    android:gravity="right"
                    android:text="Videos Uploaded"
                    />

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/clipcount"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="25dp"
                    android:text="xx" />
                <TextView
                android:id="@+id/text6"
                android:layout_width="128dp"
                android:layout_height="19dp"
                android:text="Soundclip Uploaded"
                />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="65dp">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="86dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_person" />
            <Button
                android:id="@+id/myprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:layout_marginTop="20dp"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Birds"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/recylerV_FeaturedBird">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>



    </LinearLayout>

