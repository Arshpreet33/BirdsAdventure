<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcometxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="61dp"
        android:layout_weight="1"
        android:text="@string/txt_home_welcome"
        android:textAlignment="center"
        android:textColor="@color/txtColor"
        android:textIsSelectable="false"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/birdImageSample"
        android:layout_width="119dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="146dp"
        android:layout_marginRight="146dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometxt"
        app:srcCompat="@mipmap/birdimage1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playSoundSample"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSoundSample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birdImageSample"
        app:srcCompat="@android:drawable/ic_media_play" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSoundSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:background="@color/btnColor"
        android:text="@string/action_sounds"
        android:textColor="@color/btnTxtColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playSoundSample"
        app:layout_constraintTop_toBottomOf="@+id/birdImageSample" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playVideoSample"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toStartOf="@+id/btnVideoSample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playSoundSample"
        app:srcCompat="@android:drawable/ic_media_play" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVideoSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:background="@color/btnColor"
        android:text="@string/action_videos"
        android:textColor="@color/btnTxtColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playVideoSample"
        app:layout_constraintTop_toBottomOf="@+id/btnSoundSample" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="266dp"
        android:layout_height="29dp"
        android:layout_marginTop="81dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/prompt_login"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/txt_normal"
        app:layout_constraintEnd_toStartOf="@+id/btnLoginHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playVideoSample" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLoginHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_weight="2"
        android:background="@color/btnColor"
        android:text="@string/action_login"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/btnTxtColor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/btnVideoSample" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="266dp"
        android:layout_height="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="83dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/prompt_sign_up"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/txt_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSignUpHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUpHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="75dp"
        android:layout_weight="2"
        android:background="@color/btnColor"
        android:text="@string/action_register"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/btnTxtColor"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView2"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginHome" />

</androidx.constraintlayout.widget.ConstraintLayout>