<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkgradient"
    tools:context=".BirdMediaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textcolor1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@string/birdimages"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/whitish" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/mediaImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@mipmap/birdimgmedia"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/textcolor1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "@string/birdvideos"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="@color/whitish"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/videothumnail"
            android:layout_width="100dp"
            android:layout_marginTop="5dp"
            android:layout_height="100dp"
            android:src="@drawable/birddemothiumnail">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/textcolor1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text= "@string/birdsounds"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/whitish"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/soundplaybtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/playbtn" />

            <SeekBar
                android:layout_gravity="center"
                android:id="@+id/seekbarProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>